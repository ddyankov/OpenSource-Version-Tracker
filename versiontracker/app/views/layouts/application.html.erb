<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
    <head>
        <title>OpenSource Version Tracker</title>
        <%= stylesheet_link_tag 'layout2_setup' %>
        <%= stylesheet_link_tag 'layout2_text' %>
        <%= javascript_include_tag :defaults %>
    </head>
    <!--[if IE]><style type="text/css"> body {word-wrap: break-word;}</style><![endif]-->
    <body>
        <!-- Main Page Container -->
        <div class="page-container">
            <!-- For alternative headers START PASTE here --><!-- A. HEADER -->
            <div class="header">
                <div class="header-top">
                    <!-- Sitelogo and sitename --><a class="sitelogo" href="#" title="Go to Start page"></a>
                    <div class="sitename">
                        <h1><a href="#" title="Go to Start page">OSVT.org<span style="font-weight:normal;font-size:50%;"></span></a></h1>
                        <h2>OpenSource Version Tracker</h2>
                    </div>
                    <!-- Navigation Level 1 -->
                    <div class="nav1">
                        <ul>
                            <% if !current_user %>
                            <li>
                                <%= link_to "Register", new_account_path %>
                            </li>
                            <li>
                                <%= link_to "Log In", new_user_session_path %>
                            </li>
                            <% else %>
                            <li>
                                <%= link_to "Home", account_path %>
                            </li>
                            <li>
                                <%= link_to "Edit Account", edit_account_path %>
                            </li>
                            <li>
                                <%= link_to "Logout", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?" %>
                            </li>
                            <% end %>
                            <li>
                                <a href="http://github.com/versiontracker/OpenSource-Version-Tracker/" title="GitHub">GitHub</a>
                            </li>
                            <li>
                                <a href="osvt_plugin.rb" title="Download">Download</a>
                            </li>
                            <li>
                                <a href="#" title="About">About</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- A.3 HEADER BOTTOM -->
                <div class="header-bottom">
                </div>
                <!-- Breadcrumbs -->
                <div class="header-breadcrumbs">
                    <ul>
                        <li>
                            <%= flash[:notice] %>
                        </li>
                    </ul>
                    <!-- Search form -->
                    <div class="searchform">
                        <form action="index.html" method="get">
                            <fieldset>
                                <input name="field" class="field" value=" Search..." /><input type="submit" name="button" class="button" value="GO!" />
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div><!-- B. MAIN -->
            <div class="main">
                <div class="main-content">
                	
					<%= yield %>
					
                </div>
                <hr class="clear-contentunit" />
            </div>
            <div class="footer">
                <p>
                    Copyright &copy; 2010 OSVT.org | All Rights Reserved
                </p>
                <p class="credits">
                    <a href="http://validator.w3.org/check?uri=referer" title="Validate XHTML code">XHTML 1.0</a>
                    | <a href="http://jigsaw.w3.org/css-validator/" title="Validate CSS code">CSS 2.0</a>
                </p>
            </div>
        </div>
    </body>
</html>
